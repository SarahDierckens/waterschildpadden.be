extends ../layout

include ../mixins/parser
include ../mixins/p
include ../mixins/p-caption

block title
    title= activeSubNavigation.title + " - " + activeNavigation.title + " - " + data.site.title

block mainContent
    div.row
        div.col.s12
            include ../publicity/pubMobileTop
        block intro
            div.col.s12
                h3.flow-h3.header=content.title
                if (content.intro)
                    if (typeof content.intro === 'string' || content.intro instanceof String)
                        +p-caption(content.intro)
                    else
                        +parser(content.intro)
                include ./subContent/subContentPage
                if (content.outro)
                    +p(content.outro)