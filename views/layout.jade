doctype html
html
    head
        block title
            title= data.site.title
        //-Import Google Icon Font
        link(rel='stylesheet' href=layout.font)

        //-Import materialize.css
        link(rel='stylesheet' type='text/css' href=layout.cssFramework media='screen,projection')

        link(rel='stylesheet' type='text/css' href=layout.css media='screen,projection')

        //-Let browser know website is optimized for mobile
        meta(name='viewport' content='width=device-width, initial-scale=1.0')

        //-Metatags for search engines
        meta(name='description' content=metaData.description)
    body
        header
            block header
                include ./header/defaultHeader
        main
            block main
                div.container: div.row
                    div.section.scrollspy
                    div.col.s12.m9
                        block mainContent
                    div.col.s12.m3
                        block sideContent
                            include ./pages/sideContent/defaultSideContent
        footer.page-footer
            block footer
                include ./footer/defaultFooter

        //-Import jQuery before materialize.js
        script(type='text/javascript' src=layout.jquery)
        script(type='text/javascript' src=layout.cssFrameworkJs)
        script(type='text/javascript' src=layout.cssJs)

