.container
    .row
        .col.l8.s12
            .row
                .col.s12
                    h5.flow-h5 Sitemap
            .row
                each navigation, key in data.navigation.navigationTree
                    .col.s6.m3
                        .row: .col.s12
                            h5.flow-h5: a(href=navigation.route)=navigation.title
                        each subNavigation in navigation.subNavigations
                            .row: .col.s12
                                a(href=navigation.route + subNavigation.route)=subNavigation.title
        .col.l4.s12
            h5.flow-h5 Andere links
            ul
                each navigation, key in data.navigation.singleNavigations
                    li
                        a(href=navigation.route)=navigation.title
